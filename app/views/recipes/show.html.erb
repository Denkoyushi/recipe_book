<h1><%= @recipe.name %></h1>

<p> <%= @recipe.content %> </p>

<h3>Tags</h3>
<ul>
  <% @recipe.tags.each do |tag| %>
  <li><%= tag.name %></li>
  <% end %>
</ul>

<a href="/recipes/<%= @recipe.id %>/edit"><button class="btn btn-warning">Edit this Recipe</button></a>

<a href="/recipes/<%= @recipe.id %>"
   data-confirm="You sure?"
   data-method="delete"
   rel="nofollow"><button class="btn btn-danger">Delete Recipe</button></a>

<a href="/recipes"><button class="btn btn-primary">Recipe Menu</button></a>
